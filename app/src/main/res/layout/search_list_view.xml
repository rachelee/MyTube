<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    style="?android:listSeparatorTextViewStyle">

    <ImageView
        android:id="@+id/thumbnail_fv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" android:layout_margin="-2dp"/>
        <!--android:layout_weight="1"-->




    <LinearLayout
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
            >


        <TextView
            android:id="@+id/title_fv"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top"


            android:layout_width="match_parent"/>
        <TextView
            android:id="@+id/num_of_views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:gravity="bottom"

            android:layout_weight="1"/>


        <TextView
            android:id="@+id/publish_date_fv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10sp"
            android:gravity="bottom"

            />
    </LinearLayout>

    <CheckBox
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/star_button"
        android:layout_weight="1"
        android:checked="false"
        android:button="@drawable/star_button"
        android:gravity="center"
        style="?android:attr/starStyle"
       />

        <!--  style="?android:attr/starStyle" android:button="@drawable/star_button"-->



</LinearLayout>

